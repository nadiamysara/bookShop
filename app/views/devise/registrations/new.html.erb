<%= render "devise/shared/links", header: true %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.text_field :phone, autofocus: false, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: false, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", help: "#{@minimum_password_length} characters minimum" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions" style="text-align:center">
    <%= f.primary "Sign Up" %>
  </div>
<% end %>