<div class="h2-center">Profile</div>
<br>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal) do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <div class="field">
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.text_field :phone, autocomplete: "phone" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", help:"#{@minimum_password_length} characters minimum. Please leave blank if you don't want to change your password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password", help:"We need your current password to confirm your changes" %>
  </div>
  <br>
  <div class="actions" style="text-align:center">
    <%= f.primary :Update %>
  </div>
<% end %>
<br><hr>
<div style="text-align:right">
  <h3>Cancel account</h3>
  <small>Once you delete your account, there is no going back. Please be certain.</small>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"btn btn-warning" %>
</div>