<%= bootstrap_form_with(layout: :horizontal, model: user, url: updateRecord_users_path(id:user.id)) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.text_field :email %>
  </div><div>
    <%= form.text_field :phone %>
  </div><div>
    <%= form.text_field :rent_limit %>
  </div>
  <div>
  <%= form.form_group :admin, label: { text: "Role" } do %>
    <%= form.radio_button :admin, false, label: "User", inline: true %>
    <%= form.radio_button :admin, true, label: "Admin", inline: true %>
  <% end %>
  </div>
  
  <div style="text-align:center">
    <%= form.submit :Update, class:"btn btn-success" %>
  </div>
<% end %>
