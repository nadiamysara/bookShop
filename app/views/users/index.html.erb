<%= render "/shared/navpath", child: "User Records" %><br>
<div class="table-responsive">
 <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Status</th>
        <th>Books borrowed</th>
        <th>Action</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <% if user.admin == true %>
          <!--<td><img src="<%#= image_path('users/'+user.id.to_s+'.png') %>" width="150px"></td>-->
          <td>Admin</td>
        <% else %>
          <td>Users</td>
        <% end %>
        <td>
        <%= user.rent_limit %>
        </td>
        <td><%= link_to "Edit", editRecord_users_path(id:user.id) %></td>
      <tr>
    <% end %>
  </table>
</div>

