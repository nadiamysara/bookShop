<div class="grid-container-1_3">
  <div hidden class="grid-1_3-leftCol">
    <%= link_to "Back to books", books_path %>
  </div>
  <div class="grid-1_3-centreCol">
    <% if can? :update, @books %>
      <%= link_to "Edit this book", edit_book_path(@book) %> 
    <% end %> 
  </div>
  <div class="grid-1_3-rightCol">
    <!-- Cannot delete book records because of the references   -->
    <% if can? :destroy, @books %>
      <%= button_to "Destroy this book", @book, method: :delete, class:"btn btn-danger" %>
    <% end %>
  </div>
</div>
<br>
<%= render @book %>