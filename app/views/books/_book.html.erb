<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Author:</strong>
    <!--<%= Author.find(book.author_id).name %>-->
    <%= link_to Author.find(book.author_id).name, author_path(book.author_id) %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= book.genre %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= book.year %>
  </p>

  <p>
    <strong>Desc:</strong>
    <%= book.desc %>
  </p>

</div>
