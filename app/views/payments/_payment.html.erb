<div id="<%= dom_id payment %>" class="contain-table">
  <table class="table table-striped" style="width:inherit">
    <tr>
      <th style="width:15%">Payment ID<th>
      <td><%= payment.id %></td>
      <th>Payment Date<th>
      <td><%= payment.created_at %></td>
    </tr>
    <tr>
      <th>Order Number<th>
      <td><%= payment.order_number %></td>
      <th>Payment Status<th>
        <% if payment.status %>
        <td style="color:green">
          Success
        </td>
        <% else %>
        <td style="color:red">
          Fail
        </td>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>User ID<th>
      <td><%= payment.user_id %></td>
      <th>Rent ID<th>
      <td><%= payment.book_user_id %></td>
    </tr>
    <tr>
      <th>Name<th>
      <td colspan=4><%= payment.buyer_name %></td>
    </tr>
    <tr>
      <th>Phone<th>
      <td><%= payment.buyer_phone %></td>
      <th>Email<th>
      <td><%= payment.buyer_email %></td>
    </tr>
    <tr>
      <th>Payment Fee<th>
      <td colspan=4>RM <%= (number_with_precision payment.transaction_amount, precision: 2) %></td>
    </tr>
    <tr>
      <th>Description<th>
      <td colspan=4><%= payment.product_description %></td>
    </tr>
    <tr>
      
    </tr>
  </table>
</div>
