<h1>Authors</h1>

<div id="authors">
  <% @authors.each do |author| %>
    <%= render author %>
    <p>
      <%= link_to "Show this author", author %>
    </p>
  <% end %>
</div>
<% if can? :create, @author %>
  <%= link_to "New author", new_author_path %>
<% end %>

<%= render partial: "shared/pagination" %>